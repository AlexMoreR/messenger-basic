{
  "manifest_version": 3,
  "name": "NETMAGI (Basic)",
  "version": "1.0.0",
  "description": "Botón flotante con respuestas rápidas para Messenger (pega texto, no envía automático).",
  "permissions": ["scripting"],
  "host_permissions": [
    "https://www.messenger.com/*",
    "https://www.facebook.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.messenger.com/*",
        "https://www.facebook.com/messages/*"
      ],
      "js": ["ui.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": { "default_title": "NETMAGI Replies" }
}
